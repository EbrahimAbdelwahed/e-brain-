###############################################
# LLM Providers
###############################################
# Optional: OpenAI key (used for embeddings if configured)
OPENAI_API_KEY=

# OpenRouter API key (required for LLM summarization via OpenRouter)
OPENROUTER_API_KEY=
# Optional: override OpenRouter base URL
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

###############################################
# Summarization Controls
###############################################
# Use LLM for summarization (true/false)
SUMMARIZE_USE_LLM=true
# Model name for LLM summarization (e.g., openai/gpt-4o-mini)
SUMMARIZE_MODEL=
# Sampling parameters (only if model supports them)
SUMMARIZE_TEMPERATURE=0.3
SUMMARIZE_TOP_P=1.0
# Randomness seed for reproducibility (if supported)
SUMMARIZE_SEED=42

###############################################
# Embeddings
###############################################
# Use offline embeddings only (no external calls)
EMBED_OFFLINE=false

###############################################
# Ranking
###############################################
# Half-life (hours) for score decay in ranking
RANK_HALF_LIFE_HOURS=24

###############################################
# Observability (Langfuse)
###############################################
# Langfuse host (e.g., https://cloud.langfuse.com)
LANGFUSE_HOST=
# Public key (no secrets)
LANGFUSE_PUBLIC_KEY=
# Secret key (keep in env only; do not commit)
LANGFUSE_SECRET_KEY=

###############################################
# Persistence (optional)
###############################################
# Optional: Postgres connection string (pgvector recommended)
# Example: postgresql://USER:PASSWORD@localhost:5432/e_brain
DATABASE_URL=
