###############################################
# Environment
###############################################
# Deployment environment name
ENV=development
# Dry-run mode (no external side effects when true)
DRY_RUN=true

###############################################
# Database (optional)
###############################################
# Optional: Postgres connection string (pgvector recommended)
# Example: postgresql://USER:PASSWORD@localhost:5432/e_brain
DATABASE_URL=
# Embedding vector dimension (matches selected embedding model)
EMBEDDING_DIM=1536

###############################################
# OpenAI (optional)
###############################################
# API key for OpenAI (leave blank if using OpenRouter)
OPENAI_API_KEY=
# Default embedding model name
EMBEDDING_MODEL=text-embedding-3-small
# Default chat/generation model name
CHAT_MODEL=gpt-4o-mini

###############################################
# OpenRouter (optional)
###############################################
# API key for OpenRouter (LLM proxy)
OPENROUTER_API_KEY=
# Optional: override OpenRouter base URL
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

###############################################
# Summarization / LLM Controls
###############################################
# Use LLM for summarization (true/false)
SUMMARIZE_USE_LLM=false
# Model name when using LLM summarization
SUMMARIZE_MODEL=
# Sampling parameters (only if model supports them)
SUMMARIZE_TEMPERATURE=0.3
SUMMARIZE_TOP_P=1.0
# Randomness seed for reproducibility (if supported)
SUMMARIZE_SEED=42

###############################################
# Embedding behavior
###############################################
# Use offline embeddings only (no external calls)
EMBED_OFFLINE=false

###############################################
# Ranking
###############################################
# Half-life (hours) for score decay in ranking
RANK_HALF_LIFE_HOURS=24

###############################################
# Observability (Langfuse) — optional
###############################################
# Langfuse host (e.g., https://cloud.langfuse.com)
LANGFUSE_HOST=
# Public key (no secrets)
LANGFUSE_PUBLIC_KEY=
# Secret key (keep in env only; do not commit)
LANGFUSE_SECRET_KEY=

###############################################
# X API (read-only)
###############################################
# Bearer token for X API v2 (read-only)
X_BEARER_TOKEN=
# Optional: override API base host (defaults to api.x.com)
X_API_BASE=api.x.com

###############################################
# X API (posting) — OAuth 1.0a user context
###############################################
X_API_KEY=
X_API_SECRET=
X_ACCESS_TOKEN=
X_ACCESS_TOKEN_SECRET=

###############################################
# Posting windows
###############################################
# Comma-separated HH:MM-HH:MM ranges (local user time)
POST_WINDOWS_US=09:00-12:00,17:00-19:00
POST_WINDOWS_EU=08:00-11:00,18:00-20:00
